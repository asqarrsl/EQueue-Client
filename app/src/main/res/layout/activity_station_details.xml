<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StationDetailsActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:backgroundTint="#4CAF50"
        android:text="Station Details Update"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Reg_num"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:backgroundTint="#4CAF50"
        android:text="Registration Number"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="149dp" />

    <Switch
        android:id="@+id/switch_avl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Available Status"
        android:thumbTint="#4CAF50"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="553dp" />

    <TextView
        android:id="@+id/Station_Location"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:backgroundTint="#4CAF50"
        android:text=" Location"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="286dp" />

    <EditText
        android:id="@+id/ArrivalTime"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:backgroundTint="#4CAF50"
        android:ems="10"
        android:hint="Arrival Time"
        android:inputType="time"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="417dp" />

    <TextView
        android:id="@+id/Num_pumps"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:backgroundTint="#4CAF50"
        android:text=" No of Pumps"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/update_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="Update"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="616dp" />

    <EditText
        android:id="@+id/finishTime"
        android:layout_width="267dp"
        android:layout_height="43dp"
        android:backgroundTint="#4CAF50"
        android:ems="10"
        android:hint="Finish Time"
        android:inputType="time"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="493dp" />

    <TextView
        android:id="@+id/Station_name"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:backgroundTint="#4CAF50"
        android:text=" Station Name"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="218dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
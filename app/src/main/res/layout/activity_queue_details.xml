<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#3F51B5"
    tools:context=".QueueDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#4CAF50"
                android:contentDescription="@string/back"
                app:layout_constraintBottom_toTopOf="@+id/welcome"
                app:layout_constraintEnd_toStartOf="@+id/logo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.027"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/queueDetailsTitle"
                android:layout_width="211dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/bold"
                android:text=" Station Details"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="40dp"
                android:background="#4CAF50"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/stationName"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/bold"
                    android:text="Dehiwala"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fuelAvailability"
                    android:layout_width="170dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bold"
                    android:text="Available"
                    android:textColor="@android:color/system_accent1_100"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/queueLengthDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="#4CAF50"
                    android:fontFamily="@font/bold"
                    android:text="No of vehicles"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/VehicleAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"

                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/semibold"
                        android:text="50"
                        android:textColor="@color/teal_700"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/totalVehicles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/semibold"
                        android:text="Vehicles"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vehicleTypeArray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vehicleTypes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="32dp"
                        android:background="#4CAF50"
                        android:fontFamily="@font/bold"
                        android:text="Vehicle Types"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/vehicleType"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="36dp"
                            android:layout_marginBottom="32dp"
                            android:fontFamily="@font/semibold"
                            android:text="car"
                            android:textColor="@color/teal_700"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/vehicleAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="19dp"
                            android:fontFamily="@font/semibold"
                            android:text="5"
                            android:textColor="@color/teal_700"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/departureTitile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="#4CAF50"
                    android:fontFamily="@font/bold"
                    android:text="Waiting Time"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/waitingTime"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/semibold"
                    android:text="30mins"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp" />

            </LinearLayout>


            <Button
                android:id="@+id/joinQueue"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#4CAF50"
                android:text="Join Queue"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="354dp"
                tools:layout_editor_absoluteY="1dp" />

            <Button
                android:id="@+id/exitbeforepump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="Exit Before Pump" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:text="EXIT AFTER PUMP" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>